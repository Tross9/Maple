<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MapleSugar.Pages.FileSystemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
   
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="6">
                <Button
                    Clicked="Load"
                    HorizontalOptions="FillAndExpand"
                    Text="Select cache Data file" />  
            </StackLayout>
            <Editor x:Name="CurrentContents" VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>